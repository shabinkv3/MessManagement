<ion-header translucent>
            <ion-toolbar>
              <ion-title style="text-align: center; padding-left: 70px;">Change Password</ion-title>
              <ion-buttons slot="end">
                <ion-button slot="icon-only" onClick="dismissPopover()"><ion-icon name="close"></ion-icon></ion-button>
              </ion-buttons>
            </ion-toolbar>
          </ion-header>
          <ion-content>
          <ion-item style="--ion-color-primary:  #8f15f4">
          <ion-label position="floating">Old Password</ion-label>
            <ion-input id='staff[name]' class="staff" required="true"></ion-input>
            </ion-item>
            <ion-item style="--ion-color-primary:  #8f15f4">
            <ion-label position="floating">New Password</ion-label>
            <ion-input id='staff[phoneno]' class="staff" required="true"></ion-input>
            </ion-item><br>
            <ion-item style="--ion-color-primary:  #8f15f4">
            <ion-label position="floating">Confirm New Password</ion-label>
            <ion-input class="staff" required="true"></ion-input>
            </ion-item><br>
            <div style="text-align:center;">
            <ion-button style="--ion-color-primary:  #8f15f4;self-align:center; margin-bottom: 10px;" >Add Staff</ion-button>
            </div>
          </ion-content>